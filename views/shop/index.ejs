<main>
  <div class="container py-4">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto text-center">
        <img src="/uploads/<%= shop.logo %>" alt="Shop Logo" class="img-fluid rounded-circle mb-4" style="max-width: 200px;">
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <h1 class="display-4"><%= shop.name %></h1>
      <a href="/product/add?shopid=<%= shop.id %>" class="btn btn-primary">Add Product</a>
    </div>
    <hr class="my-4">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% products.forEach(function(product) { %>
        <div class="col mb-4">
          <div class="card h-100">
            <a href="/product/detail?id=<%= product._id %>">
              <img src="/uploads/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
            </a>
            <div class="card-body">
              <h2 class="card-title h4"><%= product.productName %></h2>
              <p class="card-text"><%= product.description %></p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/product/edit?id=<%= product._id %>&shopid=<%= shop._id %>" class="btn btn-outline-secondary">Edit</a>
                <a href="/product/delete?id=<%= product._id %>&shopid=<%= shop._id %>" class="btn btn-outline-secondary">Delete</a>
              </div>
              <small class="text-muted">Price: <%= product.price %></small>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>
