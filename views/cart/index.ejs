<div class="container">
    <h1 class="text-center mt-3 mb-4">Shopping Cart</h1>
  
    <form action="/order/add" method="post">
      <% cart.products.forEach(itemInCart => { %>
        <div class="card mb-3 border shadow-none">
          <div class="row g-0">
            <div class="col-md-3">
              <img src="/uploads/<%= itemInCart.id.image %>" alt="Product Image" class="img-fluid rounded w-100">
            </div>
            <div class="col-md-9">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start border-bottom pb-3">
                  <div>
                    <h5 class="card-title">
                      <a href="/product/detail?id=<%= itemInCart._id %>" class="text-dark">
                        <%= itemInCart.id.productName %>
                      </a>
                    </h5>
                  </div>
                  <div class="flex-shrink-0">
                    <ul class="list-inline mb-0 font-size-16">
                      <li class="list-inline-item">
                        <a href="#" class="text-muted px-1">
                          <i class="mdi mdi-trash-can-outline"></i>
                        </a>
                      </li>
                      <li class="list-inline-item">
                        <a href="#" class="text-muted px-1">
                          <i class="mdi mdi-heart-outline"></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
  
                <div class="row">
                  <div class="col-md-5">
                    <div class="mt-3">
                      <p class="text-muted mb-2">Quantity</p>
                      <div class="d-inline-flex">
                        <input
                          type="number"
                          name="quantity_<%= itemInCart._id %>"
                          id=""
                          value="<%= itemInCart.quantity %>"
                          min="1"
                        />
                      </div>
                    </div>
                  </div>
                  <div class="col-md-7">
                    <div class="mt-3">
                      <p class="text-muted mb-2">Price</p>
                      <h5><%= itemInCart.price %></h5>
                    </div>
                    <div>
                      <a href="/cart/delete?=<%= itemInCart._id %>">Delete product</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
  
      <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
  </div>
  